<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
    	<artifactId>uu-integration</artifactId>
    	<groupId>se.uu.its.integration</groupId>
    	<version>1.0.0-SNAPSHOT</version>
    </parent>

    <groupId>se.uu.its.integration</groupId>
    <artifactId>esb-service-identity-rest</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>ESB Identity REST Service</name>
    <description>ESB Identity REST Service OSGi bundle project.</description>

    <properties>
      <camel.version>2.16.0</camel.version>
      <openjpa.version>2.2.0</openjpa.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>se.uu.its.integration</groupId>
            <artifactId>esb-model</artifactId>
            <version>1.1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-cxf</artifactId>
            <version>${camel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-jpa_2.0_spec</artifactId>
            <version>1.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.openjpa</groupId>
            <artifactId>openjpa</artifactId>
            <version>${openjpa.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-jpa</artifactId>
            <version>${camel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-sql</artifactId>
            <version>${camel.version}</version>
        </dependency>
        <dependency>
            <groupId>org.mariadb.jdbc</groupId>
            <artifactId>mariadb-java-client</artifactId>
            <version>1.1.7</version>
        </dependency>
      <dependency>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
          <version>4.13.1</version>
          <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Import-Package>
                          javax.sql,
                          javax.ws.rs,
                          javax.ws.rs.core,
                          javax.persistence,
                          javax.transaction,
                          org.osgi.service.jdbc,
                          org.osgi.service.blueprint,
                          org.springframework.transaction,
                          org.springframework.transaction.support,
                          org.springframework.transaction.jta,
                          com.mysql.jdbc,
                          org.apache.camel.component.jms,
                          org.apache.camel.component.jpa,
                          org.apache.camel.processor.idempotent.jdbc,
                          org.apache.camel.spring.spi,
                          org.apache.openjpa.persistence,
                          org.apache.openjpa.enhance,
                          org.apache.openjpa.util,
                          se.uu.its.integration.model.common,
                          se.uu.its.integration.model.events
                        </Import-Package>
                        <!--
                        <Include-Resource>
                        	../esb-model/src/main/resources/se/uu/its/integration/model/transform/addIntegrationEventIdToEvent.xsl,
                        	{maven-resources}
                        </Include-Resource>
                        -->
                        <Meta-Persistence>META-INF/persistence.xml</Meta-Persistence>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
